<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_image"
        style="@style/rl_normal">

        <RelativeLayout
            android:id="@+id/border"
            style="@style/classify_big_cover_border"
            android:layout_marginRight="@dimen/distance_image_text_15">

            <ImageView
                android:id="@+id/iv_book"
                style="@style/classify_big_cover" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_novel_title"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/border"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="" />

        <TextView
            android:id="@+id/tv_introduce"
            style="@style/text_small_nomal"
            android:layout_width="160dp"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/distance_text_text_12"
            android:layout_toRightOf="@id/border"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="" />


        <TextView
            android:id="@+id/tv_time"
            style="@style/text_small_nomal"
            android:layout_below="@id/tv_introduce"
            android:layout_alignBottom="@id/border"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/border"
            android:gravity="bottom"
            android:lines="1"
            android:text="" />

        <ImageView
            android:id="@+id/add_shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/add_shlef" />

        <ImageView
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/no_select_history"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>