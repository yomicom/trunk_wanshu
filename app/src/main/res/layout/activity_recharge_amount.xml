<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:id="@+id/base"
    tools:context="com.wxb.wanshu.ui.activity.RechargeAmountActivity">

    <include layout="@layout/common_toolbar"/>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_left"
        android:layout_marginRight="@dimen/distance_left"
        android:layout_marginTop="@dimen/distance_top_20"
        android:horizontalSpacing="@dimen/distance_image_text_15"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/distance_image_text_15"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_title0"
        style="@style/text_big_nomal"
        android:layout_marginLeft="@dimen/distance_left"
        android:layout_marginTop="30dp"
        android:text="" />

    <TextView
        android:id="@+id/tv_tips"
        style="@style/text_small_nomal"
        android:layout_marginLeft="@dimen/distance_left"
        android:layout_marginRight="@dimen/distance_left"
        android:layout_marginTop="@dimen/distance_text_text_10"
        android:text=""
        android:lineSpacingExtra="@dimen/line_spacing_3"
        android:gravity="left"/>
</LinearLayout>
