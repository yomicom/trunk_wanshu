<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/rl_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_woman_banner"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.wxb.wanshu.view.CustomerBanner
                android:id="@+id/vp_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/pointGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/img_cover_width"
                android:layout_height="@dimen/img_cover_height"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_data" />

            <TextView
                style="@style/text_middle_nomal"
                android:paddingTop="@dimen/distance_text_text_8"
                android:text="@string/home_rank" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_best"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/img_cover_width"
                android:layout_height="@dimen/img_cover_height"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_data" />

            <TextView
                style="@style/text_middle_nomal"
                android:paddingTop="@dimen/distance_text_text_8"
                android:text="@string/home_best" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_short"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/img_cover_width"
                android:layout_height="@dimen/img_cover_height"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_data" />

            <TextView
                style="@style/text_middle_nomal"
                android:paddingTop="@dimen/distance_text_text_8"
                android:text="@string/home_short" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/img_cover_width"
                android:layout_height="@dimen/img_cover_height"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_data" />

            <TextView
                style="@style/text_middle_nomal"
                android:paddingTop="@dimen/distance_text_text_8"
                android:text="@string/home_finish" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>