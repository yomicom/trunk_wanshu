<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_choose_read"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="@dimen/book_cover_width"
            android:layout_height="@dimen/book_cover_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/defalt_book_cover" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_book" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_big_nomal"
            android:layout_below="@id/iv_book"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="@dimen/text_less_huge" />

        <TextView
            android:id="@+id/tv_tip"
            style="@style/text_middle_nomal"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="分享给小伙伴"
            android:textColor="@color/text_color_2" />

        <View
            style="@style/line_divide"
            android:layout_marginTop="293dp" />

        <TextView
            android:id="@+id/tv_qq"
            style="@style/text_small_nomal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="35dp"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/share_qq"
            android:text="QQ好友" />

        <TextView
            android:id="@+id/tv_weixin"
            style="@style/text_small_nomal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/share_weixin"
            android:text="微信好友" />

        <TextView
            android:id="@+id/tv_friend"
            style="@style/text_small_nomal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/share_friend"
            android:text="微信朋友圈" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/white_close_dialog" />
</RelativeLayout>