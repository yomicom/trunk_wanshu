<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_choose_read"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/png_book_sign"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_title"-->
            <!--style="@style/text_big_nomal"-->
            <!--android:layout_below="@id/iv_top"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="@dimen/distance_top_20"-->
            <!--android:text="签到成功"-->
            <!--android:textSize="@dimen/text_huge" />-->

        <TextView
            style="@style/text_small_nomal"
            android:layout_below="@id/iv_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_top_20"
            android:text="每日首次阅读赠送50书币
请明日继续签到哦！"
            android:textSize="@dimen/text_middle" />

        <Button
            android:id="@+id/btn_sure"
            style="@style/btn_login_style"
            android:layout_alignParentBottom="true"
            android:text="确定" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/white_close_dialog" />
</RelativeLayout>