<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.ConnectUsActivity">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/distance_top_20"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/distance_top_20"
        android:paddingBottom="30dp">

        <TextView
            style="@style/text_big_nomal"
            android:text="在线客服"
            android:textSize="@dimen/text_less_huge" />

        <TextView
            style="@style/text_middle_nomal"
            android:layout_marginTop="20dp"
            android:text="工作时间：周一至周五 09：00-18：00" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_top_20">

            <TextView
                android:id="@+id/kefu_phone"
                style="@style/text_middle_nomal"
                android:layout_centerVertical="true"
                android:text="客服电话：400-9981236" />

            <TextView
                android:id="@+id/tv_call"
                style="@style/text_middle_nomal"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_connect_us"
                android:text="拨打电话"
                android:textColor="@color/gobal_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_top_20">

            <TextView
                android:id="@+id/ke_qq"
                style="@style/text_middle_nomal"
                android:layout_centerVertical="true"
                android:text="客服QQ：4009981236 " />

            <TextView
                android:id="@+id/tv_qq"
                style="@style/text_middle_nomal"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_connect_us"
                android:text="QQ交谈"
                android:textColor="@color/gobal_color" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_image_text_15"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/distance_top_20"
        android:paddingTop="30dp"
        android:paddingRight="@dimen/distance_top_20"
        android:paddingBottom="30dp">

        <TextView
            style="@style/text_big_nomal"
            android:text="版权合作"
            android:textSize="@dimen/text_less_huge" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_top_20">

            <TextView
                android:id="@+id/com_qq"
                style="@style/text_middle_nomal"
                android:layout_centerVertical="true"
                android:text="十月老肥：215333652" />

            <TextView
                android:id="@+id/tv_cooperate"
                style="@style/text_middle_nomal"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_connect_us"
                android:text="QQ交谈"
                android:textColor="@color/gobal_color" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>